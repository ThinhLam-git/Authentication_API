<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Authentication_UIUX"
        tools:targetApi="31">

        <!-- Home Activity - set as launcher to open first -->
        <activity
            android:name=".Home"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Term Policy Main Activity -->
        <activity
            android:name=".Term_Policy_Main"
            android:exported="true" />

        <!-- Sign Up Activity -->
        <activity
            android:name=".Sign_Up_Activity"
            android:exported="false" />

        <!-- Language Setting Activity -->
        <activity
            android:name=".languageSetting"
            android:exported="false" />

        <!-- Recovery Password Activity -->
        <activity
            android:name=".recoveryPassword"
            android:exported="false" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".forgotPassword"
            android:exported="false" />

        <!-- Welcome Activity -->
        <activity
            android:name=".welcome"
            android:exported="false" />

    </application>
</manifest>
